<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/title_background"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/gray0"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="个人中心"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/title_background"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:textSize="19sp"
        android:id="@+id/title"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_background"
        android:src="@mipmap/mine"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/profile_photo"
        android:layout_marginStart="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/profile_photo"
        app:layout_constraintTop_toBottomOf="@+id/title_background"
        android:id="@+id/userName"
        android:text="用户名"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:layout_marginTop="65dp"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp" />

    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@mipmap/arrow_right"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/userName"
        android:layout_marginRight="20dp"
        android:id="@+id/info_button"
        android:layout_marginEnd="20dp" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/profile_photo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/gray2"
        android:layout_marginTop="15dp"
        android:id="@+id/line1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line1"
        android:text="未观看电影票"
        android:textSize="22sp"
        android:layout_margin="20dp"
        android:textColor="#FF5C5B5B"
        android:id="@+id/not_watched_movies"/>

    <Button
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@mipmap/arrow_right"
        android:alpha="0.6"
        app:layout_constraintTop_toTopOf="@id/not_watched_movies"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        android:id="@+id/not_watched_movies_button"
        android:layout_marginEnd="20dp" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/not_watched_movies"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/gray2"
        android:layout_marginTop="20dp"
        android:id="@+id/line2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line2"
        android:text="已观看电影票"
        android:textSize="22sp"
        android:layout_margin="20dp"
        android:textColor="#FF5C5B5B"
        android:id="@+id/watched_movies"/>

    <Button
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@mipmap/arrow_right"
        android:alpha="0.6"
        app:layout_constraintTop_toTopOf="@id/watched_movies"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        android:id="@+id/watched_movies_button"
        android:layout_marginEnd="20dp" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/watched_movies"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/gray2"
        android:layout_marginTop="20dp"
        android:id="@+id/line3"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line3"
        android:text="帮助"
        android:textSize="22sp"
        android:layout_margin="20dp"
        android:textColor="#FF5C5B5B"
        android:id="@+id/help"/>

    <Button
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@mipmap/arrow_right"
        android:alpha="0.6"
        app:layout_constraintTop_toTopOf="@id/help"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        android:id="@+id/help_button"
        android:layout_marginEnd="20dp" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/help"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/gray2"
        android:layout_marginTop="20dp"
        android:id="@+id/line4"/>

    <Button
        android:layout_width="130dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="40dp"
        android:background="@color/gray2"
        android:id="@+id/loginOut"
        android:text="退出登录"
        android:textSize="20sp"
        android:textColor="@color/white"/>

</android.support.constraint.ConstraintLayout>